<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Background"
    tools:context=".DetalhesDaOperacaoActivity">

    <TextView
        android:id="@+id/tvLabelOperacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Operação"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <EditText
        android:id="@+id/edOperacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="@style/EditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelOperacao">
    </EditText>

    <TextView
        android:id="@+id/tvLabeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Usuário"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edOperacao">
    </TextView>

    <EditText
        android:id="@+id/edUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="@style/EditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLabeUsuario">
    </EditText>

    <TextView

        android:id="@+id/tvLabelModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Modelo"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edUsuario">
    </TextView>

    <EditText
        android:id="@+id/edModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="@style/EditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelModelo">
    </EditText>

    <TextView
        android:id="@+id/tvLabelCodigoBarrasCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="@string/tv_dados_do_produto_imei"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edModelo">
    </TextView>

    <EditText
        android:id="@+id/edCodigoBarrasCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="@style/EditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelCodigoBarrasCadastro">
    </EditText>

    <TextView
        android:id="@+id/tvLabelEanCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="EAN"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edCodigoBarrasCadastro">
    </TextView>

    <EditText
        android:id="@+id/edEanCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="@style/EditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelEanCadastro">
    </EditText>

    <TextView
        android:id="@+id/tvLabelBoxCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Box"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edEanCadastro">
    </TextView>

    <EditText
        android:id="@+id/edBoxCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="@style/EditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelBoxCadastro">
    </EditText>

    <TextView
        android:id="@+id/tvLabelUnidadeCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Unidade"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edBoxCadastro">
    </TextView>

    <EditText
        android:id="@+id/edUnidadeCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="@style/EditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelUnidadeCadastro">
    </EditText>

    <TextView
        android:id="@+id/tvLabelDataHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Data e Hora da Operação"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edUnidadeCadastro">
    </TextView>

    <EditText
        android:id="@+id/edDataHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="@style/EditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelDataHora">
    </EditText>

    <Button
        android:id="@+id/button_ok"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/edDataHora"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@+id/edDataHora">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>