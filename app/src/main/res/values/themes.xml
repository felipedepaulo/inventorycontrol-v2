<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.InventoryControlV1" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:minLines">5</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/label_font_size</item>
        <!--<item name="android:textStyle">italic|bold</item>-->
        <item name="android:textStyle">bold</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
<!--        <item name="android:background">@drawable/background_joker</item>-->
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>